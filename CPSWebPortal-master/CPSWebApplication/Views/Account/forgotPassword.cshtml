@model CPSWebApplication.Models.ViewModel.UserLoginView

@{
    ViewBag.Title = "forgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="color: #06b759">Reset password for your UHCL email</h3>

@using (Html.BeginForm("forgotPassword", "Account"))
{
<div class="form-horizontal" >
<br />
<table class="table table-hover table-striped"
       cellspacing="10" style="border:1px solid lightgrey;background-color:#0a67b0; align-content:inherit">
    <tbody>
        <tr>
            <td >
                <table >
                    <tbody>
                        <tr>
                            <td class="col-md-20" style="padding-left:2px;padding-top:5px; color:black">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.UHCLEmail, htmlAttributes: new { @class = "control-label col-md-20" })
                            </td>
                            <td class="col-md-20" style="padding-left:4px; padding-top:5px;color:black">
                                @Html.EditorFor(model => model.UHCLEmail, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UHCLEmail, "", new { @class = "text-danger" })
                            </td>
                        <tr />
                        <tr>
                            <td class="col-md-20" style="padding-Left:2px;padding-top:5px;padding-bottom:5px; color:black">
                                @Html.LabelFor(model => model.UHCLEmailPassword, htmlAttributes: new { @class = "control-label col-md-20" })
                            </td>
                            <td class="col-md-20" style="padding-Left:4px; padding-top:5px; padding-bottom:5px; color:black">
                                @Html.EditorFor(model => model.UHCLEmailPassword, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UHCLEmailPassword, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td class="col-md-20" style="padding-Left:2px;padding-top:5px;padding-bottom:5px; color:black">
                                @Html.LabelFor(model => model.confirmPassword, htmlAttributes: new { @class = "control-label col-md-20" })
                            </td>
                            <td class="col-md-20" style="padding-Left:4px; padding-top:5px; padding-bottom:5px; color:black">
                                @Html.EditorFor(model => model.confirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.confirmPassword, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td style="padding-left:30px; padding-top:20px; padding-bottom:2px">
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-20">
                                        <button name="action" value="save" type="submit" formmethod="post" class="btn btn-primary" onclick="window.location = ('@Url.Action("forgotPAssword","Account")')">Reset</button>
                                    </div>
                                </div>
                            </td>
                            <td style="padding-left:30px; padding-top:20px; padding-bottom:2px">
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-20">
                                        <button type="button" class="btn btn-default" onclick="window.location = ('@Url.Action("LogIn", "Account")')">Cancel</button>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
          </table>
          </div>
}